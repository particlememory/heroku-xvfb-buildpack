#!/usr/bin/env bash

echo "-----> Installing Xvfb Portable"
# Go to app folder
cd $1

# Get firefox tar
curl https://raw.githubusercontent.com/kenshin23/xvfb-portable-binary/master/Xvfb.tar.xz -s -O 

# Create bin folder in vendor
mkdir -p vendor/xvfb

# Extract all files
echo "       Extracting files to 'vendor/xvfb'..."
tar --preserve-permissions --preserve-order -xvf Xvfb.tar.xz -C vendor/xvfb
